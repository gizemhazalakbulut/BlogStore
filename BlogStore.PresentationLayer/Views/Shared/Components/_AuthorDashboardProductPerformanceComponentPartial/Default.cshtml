@model List<BlogStore.EntityLayer.Entities.Article>
<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div class="d-md-flex align-items-center">
                <div>
                    <h4 class="card-title">Son Yüklediğim Makaleler</h4>
                </div>
                <div class="ms-auto mt-3 mt-md-0">
                    <select class="form-select theme-select border-0" aria-label="Default select example">
                        <option value="1">March 2025</option>
                        <option value="2">March 2025</option>
                        <option value="3">March 2025</option>
                    </select>
                </div>
            </div>
            <div class="table-responsive mt-4">
                <table class="table mb-0 text-nowrap varient-table align-middle fs-3">
                    <thead>
                        <tr>
                            <th scope="col" class="px-0 text-muted">
                                Makale Başlığı
                            </th>
                            <th scope="col" class="px-0 text-muted">
                                Oluşturulma Tarihi
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-0">
                                    <div class="d-flex align-items-center">
                                        <img src="@item.ImageUrl" class="rounded-circle" width="40"
                                             alt="flexy" />
                                        <div class="ms-3">
                                            <h6 class="mb-0 fw-bolder">@item.Title</h6>
                                            <span class="text-muted">@item.Description.Substring(0, 100)</span>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-0">@item.CreatedDate.ToShortDateString()</td>
                                <td class="px-0">
                                    <span class="badge bg-info"><a href="/Article/ArticleDetail/@item.Slug">Görüntüle</a></span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
